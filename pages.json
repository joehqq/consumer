	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	 
	"pages": [ //pages数组中第一项表示应用启动页,
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "洪湾商户",
				"navigationBarTextStyle": "black"
			}
		}
        ,{
            "path" : "pages/orders/orders",
            "style" : {
				"navigationBarTitleText": "我的订单",
				"navigationBarTextStyle": "black",
